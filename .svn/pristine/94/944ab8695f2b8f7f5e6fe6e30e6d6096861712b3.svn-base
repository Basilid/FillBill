<Window x:Class="Demo.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Demo"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Window.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="\Controls/TabControlTitled.xaml" />
            </ResourceDictionary.MergedDictionaries>
            <DataTemplate DataType="{x:Type local:SearchSet}">
                <Grid IsSharedSizeScope="True">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition />
                    </Grid.RowDefinitions>
                    <GridSplitter VerticalAlignment="Stretch" Height="5" Grid.Row="2"/>
                    <StackPanel Grid.Row="1" Orientation="Horizontal" HorizontalAlignment="Right">
                        <Button Margin="5">
                            <Button.Content>
                                <StackPanel Orientation="Horizontal">
                                    <Image Source="/Images/add.png" Height="16"/>
                                    <Label Content="Добавить поле"/>
                                </StackPanel>
                            </Button.Content>
                        </Button>
                        <Button Margin="5">
                            <Button.Content>
                                <StackPanel Orientation="Horizontal">
                                    <Image Source="/Images/document.png" Height="16"/>
                                    <Label Content="Найти"/>
                                </StackPanel>
                            </Button.Content>
                        </Button>
                    </StackPanel>
                    <ListBox Grid.Row="0" ItemsSource="{Binding Conditions}" MinHeight="50">
                        <ListBox.Resources>
                            <DataTemplate DataType="{x:Type local:SearchCondition}">
                                <Grid>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="Auto" />
                                        <ColumnDefinition Width="Auto" SharedSizeGroup="SearchFieldName"/>
                                        <ColumnDefinition Width="Auto" SharedSizeGroup="SearchPattern"/>
                                        <ColumnDefinition />
                                        <ColumnDefinition />
                                    </Grid.ColumnDefinitions>
                                    <CheckBox Grid.Column="0" IsChecked="{Binding IsActive}" VerticalAlignment="Center"/>
                                    <ComboBox Grid.Column="1" IsEditable="True" Text="{Binding FieldName}" VerticalAlignment="Center" />
                                    <TextBox Grid.Column="2" Text="{Binding Pattern}" MinWidth="100" MinHeight="22" VerticalAlignment="Center"/>
                                    <Button Margin="2" Grid.Column="3">
                                        <Image Source="../Images/star.png" Height="16"/>
                                    </Button>
                                    <Button Margin="2" Grid.Column="4">
                                        <Image Source="../Images/remove.png" Height="16"/>
                                    </Button>
                                </Grid>
                            </DataTemplate>
                        </ListBox.Resources>
                    </ListBox>
                </Grid>
            </DataTemplate>
        </ResourceDictionary>

    </Window.Resources>
    <DockPanel HorizontalAlignment="Stretch" UseLayoutRounding="False">
        <Menu DockPanel.Dock="Top">
            <MenuItem Header="Выход" Click="MenuItem_OnClick"/>
        </Menu>
        <DockPanel SnapsToDevicePixels="True" Margin="5" HorizontalAlignment="Stretch" DockPanel.Dock="Top">
            <Button>
                <Image Source="/Images/next.png" Height="16"/>
            </Button>
            <ComboBox Text="fillbill://data.ctm.ru/package?id=35044&amp;smgs=C54675675&amp;column=25&amp;record=1" StaysOpenOnEdit="True" 
                      SnapsToDevicePixels="True" IsEditable="True" Margin="5,0,0,0"/>
        </DockPanel>
        <StatusBar DockPanel.Dock="Bottom">
            <StatusBarItem>
                Status
            </StatusBarItem>
        </StatusBar>
        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="2*"/>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="6*"/>
            </Grid.ColumnDefinitions>
            <GridSplitter HorizontalAlignment="Stretch" Width="5" Grid.Column="1"/>
            <TreeView ItemContainerStyle="{DynamicResource TreeViewItemContainerStyle1}" Grid.Column="0" Name="TreeView1" Padding="0,0,0,0">
                <TreeView.Resources>
                    <HierarchicalDataTemplate DataType="{x:Type local:Package}" ItemsSource="{Binding Path=Docs}">
                        <StackPanel SnapsToDevicePixels="True" Orientation="Horizontal" DockPanel.Dock="Top" RenderTransformOrigin="0.5,0.5">
                            <Image Source="/Images/db.png" Height="16"/>
                            <Label Content="{Binding Name, StringFormat='Пакет: {0}'}"/>
                        </StackPanel>
                    </HierarchicalDataTemplate>
                    <HierarchicalDataTemplate DataType="{x:Type local:SMGS}">
                        <StackPanel SnapsToDevicePixels="True" Orientation="Horizontal" DockPanel.Dock="Top" RenderTransformOrigin="0.5,0.5">
                            <Image Source="/Images/document.png" Height="16"/>
                            <Label Content="{Binding Number, StringFormat='СМГС: {0}'}"/>
                        </StackPanel>
                    </HierarchicalDataTemplate>
                </TreeView.Resources>
            </TreeView>
            <local:TabControlTitled Title="Поиск и пакеты:" Grid.Column="2">
                <TabItem>
                    <TabItem.Header>
                        <StackPanel Orientation="Horizontal">
                            <Image Source="../Images/db.png" Height="16"/>
                            <Label Content="PK-45645"/>
                        </StackPanel>
                    </TabItem.Header>
                    <local:TabControlTitled Title="Страницы:">
                        <TabItem Header="СМГС #1">
                            <ScrollViewer VerticalScrollBarVisibility="Visible">
                                <Image x:Name="docImage" Source="../Images/SMGS.png" Stretch="UniformToFill" Margin="0,0,10,0"></Image>
                            </ScrollViewer>
                        </TabItem>
                        <TabItem Header="Page #2"/>
                    </local:TabControlTitled>
                </TabItem>
                <TabItem>
                    <TabItem.Header>
                        <StackPanel Orientation="Horizontal">
                            <Image Source="../Images/search.png" Height="16"/>
                            <Label Content="S-345345"/>
                        </StackPanel>
                    </TabItem.Header>
                    <local:SearchSet>
                        <local:SearchSet.Conditions>
                            <local:SearchCondition FieldName="Номер накладной" Pattern="456456" />
                            <local:SearchCondition FieldName="Станция приема" Pattern="Печоры" />
                        </local:SearchSet.Conditions>
                    </local:SearchSet>
                </TabItem>
                <TabItem>
                    <TabItem.Header>
                        <StackPanel Orientation="Horizontal">
                            <Image Source="../Images/add.png" Height="16"/>
                            <Label Content="Искать..."/>
                        </StackPanel>
                    </TabItem.Header>
                </TabItem>
            </local:TabControlTitled>
        </Grid>
    </DockPanel>
</Window>
