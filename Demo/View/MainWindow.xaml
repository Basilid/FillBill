<Window x:Class="Demo.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Demo"
        mc:Ignorable="d"
        Title="Fill-Bill WPF Demo" Height="450" Width="800" WindowStyle="None">
    <Window.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="\Controls/TabControlTitled.xaml" />
            </ResourceDictionary.MergedDictionaries>
            <local:PackageStatus2StringConverter x:Key="PackageStatus2StringConverterSingle"/>
            <DataTemplate DataType="{x:Type local:SearchSet}">
                <Grid IsSharedSizeScope="True">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition />
                    </Grid.RowDefinitions>
                    <GridSplitter VerticalAlignment="Stretch" Height="5" Grid.Row="2"/>
                    <StackPanel Grid.Row="1" Orientation="Horizontal" HorizontalAlignment="Right">
                        <Button Margin="5" Click="ButtonBase_OnClick">
                            <Button.Content>
                                <StackPanel Orientation="Horizontal">
                                    <Image Source="/Images/add.png" Height="16"/>
                                    <Label Content="Добавить поле"/>
                                </StackPanel>
                            </Button.Content>
                        </Button>
                        <Button Margin="5">
                            <Button.Content>
                                <StackPanel Orientation="Horizontal">
                                    <Image Source="/Images/document.png" Height="16"/>
                                    <Label Content="Найти"/>
                                </StackPanel>
                            </Button.Content>
                        </Button>
                    </StackPanel>
                    <ListBox Grid.Row="0" ItemsSource="{Binding Conditions}" MinHeight="50">
                        <ListBox.Resources>
                            <DataTemplate DataType="{x:Type local:SearchCondition}">
                                <Grid>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="Auto" />
                                        <ColumnDefinition Width="Auto" SharedSizeGroup="SearchFieldName"/>
                                        <ColumnDefinition Width="Auto" SharedSizeGroup="SearchPattern"/>
                                        <ColumnDefinition />
                                        <ColumnDefinition />
                                    </Grid.ColumnDefinitions>
                                    <CheckBox Grid.Column="0" IsChecked="{Binding IsActive}" VerticalAlignment="Center"/>
                                    <ComboBox Grid.Column="1" IsEditable="True" Text="{Binding FieldName}" VerticalAlignment="Center" IsTabStop="True" />
                                    <TextBox Grid.Column="2" Text="{Binding Pattern}" MinWidth="100" MinHeight="22" VerticalAlignment="Center"  IsTabStop="True"/>
                                    <ToggleButton Margin="2" Grid.Column="3" IsChecked="{Binding IsFixed}"  IsTabStop="False">
                                        <Image Source="../Images/star.png" Height="16"/>
                                    </ToggleButton>
                                    <Button Margin="2" Grid.Column="4" IsTabStop="False" Tag="{Binding}" Click="ButtonRemove_Click">
                                        <Image Source="../Images/remove.png" Height="16"/>
                                    </Button>
                                </Grid>
                            </DataTemplate>
                        </ListBox.Resources>
                    </ListBox>
                    <DataGrid Grid.Row="3" ItemsSource="{Binding Result}" AutoGenerateColumns="False" CanUserAddRows="False">
                        <DataGrid.Columns>
                            <DataGridTextColumn Header="Номер" Binding="{Binding Number, Mode=TwoWay}" Width="SizeToCells"/>
                            <DataGridTextColumn Header="Статус"  Binding="{Binding Status, Converter={StaticResource PackageStatus2StringConverterSingle}}" IsReadOnly="True" Width="SizeToCells"/>
                            <DataGridTextColumn Header="СМГС" Binding="{Binding SMGSNum}" IsReadOnly="True" Width="*"/>
                        </DataGrid.Columns>
                    </DataGrid>
                </Grid>
            </DataTemplate>
        </ResourceDictionary>
    </Window.Resources>
    <Window.CommandBindings>
        <CommandBinding Command="{x:Static SystemCommands.CloseWindowCommand}" CanExecute="CommandBinding_CanExecute_1" Executed="CommandBinding_Executed_1" />
        <CommandBinding Command="{x:Static SystemCommands.MaximizeWindowCommand}" CanExecute="CommandBinding_CanExecute_1" Executed="CommandBinding_Executed_2" />
        <CommandBinding Command="{x:Static SystemCommands.MinimizeWindowCommand}" CanExecute="CommandBinding_CanExecute_1" Executed="CommandBinding_Executed_3" />
    </Window.CommandBindings>
    <DockPanel HorizontalAlignment="Stretch" UseLayoutRounding="False">
        <StatusBar DockPanel.Dock="Bottom">
            <StatusBarItem>
                Status
            </StatusBarItem>
        </StatusBar>
        <local:TabControlTitled LeftTitle="{Binding Title, RelativeSource={RelativeSource AncestorType=Window}}" DockPanel.Dock="Top" MouseDown="Title_MouseDown">
            <local:TabControlTitled.RightTitle>
                <StackPanel Orientation="Horizontal">
                    <Button Content="🗕" Command="{x:Static SystemCommands.MinimizeWindowCommand}"/>
                    <Button Content="🗖" Command="{x:Static SystemCommands.MaximizeWindowCommand}"/>
                    <Button Content="❌" Command="{x:Static SystemCommands.CloseWindowCommand}" Background="OrangeRed"/>
                </StackPanel>
            </local:TabControlTitled.RightTitle>
            <TabItem Name="SearchTab1">
                <TabItem.Header>
                    <StackPanel Orientation="Horizontal">
                        <Image Source="../Images/search.png" Height="16" />
                        <Label Content="Требует проверки (5)" />
                    </StackPanel>
                </TabItem.Header>

            </TabItem>
            <TabItem>
                <TabItem.Header>
                    <StackPanel Orientation="Horizontal">
                        <Image Source="../Images/db.png" Height="16" />
                        <Label Content="Пакет: 034456" />
                    </StackPanel>
                </TabItem.Header>
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="2*" />
                        <ColumnDefinition Width="Auto" />
                        <ColumnDefinition Width="6*" />
                    </Grid.ColumnDefinitions>
                    <Grid Grid.Column="0">
                        <Grid.RowDefinitions>
                            <RowDefinition  Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="*"/>
                        </Grid.RowDefinitions>
                        <Menu Grid.Row="0">
                            <MenuItem Header="Команды">
                                <MenuItem Header="История изменений" />
                            </MenuItem>
                            <MenuItem Header="Отправка">
                                <MenuItem Header="Перепроверка" />
                            </MenuItem>
                        </Menu>
                        <TextBlock Grid.Row="1" Margin="5">Статус: Проверка</TextBlock>
                        <TreeView ItemContainerStyle="{DynamicResource TreeViewItemContainerStyle1}" 
                                  Name="TreeView1" Padding="0,0,0,0" Grid.Row="2">
                            <TreeView.Resources>
                                <HierarchicalDataTemplate DataType="{x:Type local:Package}"
                                                          ItemsSource="{Binding Path=Docs}">
                                    <StackPanel SnapsToDevicePixels="True" Orientation="Horizontal" DockPanel.Dock="Top"
                                                RenderTransformOrigin="0.5,0.5">
                                        <Image Source="/Images/db.png" Height="16" />
                                        <Label Content="{Binding Number, StringFormat='Пакет: {0}'}" />
                                    </StackPanel>
                                </HierarchicalDataTemplate>
                                <HierarchicalDataTemplate DataType="{x:Type local:SMGS}">
                                    <StackPanel SnapsToDevicePixels="True" Orientation="Horizontal" DockPanel.Dock="Top"
                                                RenderTransformOrigin="0.5,0.5">
                                        <Image Source="/Images/document.png" Height="16" />
                                        <Label Content="{Binding Number, StringFormat='СМГС: {0}'}" />
                                    </StackPanel>
                                </HierarchicalDataTemplate>
                            </TreeView.Resources>
                        </TreeView>
                    </Grid>
                    <GridSplitter HorizontalAlignment="Stretch" Width="5" Grid.Column="1" />
                    <local:TabControlTitled LeftTitle="Страницы:" Grid.Column="2">
                        <TabItem Header="СМГС #1">
                            <ScrollViewer VerticalScrollBarVisibility="Visible">
                                <Image x:Name="docImage" Source="../Images/SMGS.png" Stretch="UniformToFill"
                                       Margin="0,0,10,0">
                                </Image>
                            </ScrollViewer>
                        </TabItem>
                        <TabItem Header="Page #2" />
                    </local:TabControlTitled>
                </Grid>
            </TabItem>

            <TabItem>
                <TabItem.Header>
                    <StackPanel Orientation="Horizontal">
                        <Image Source="../Images/add.png" Height="16" />
                        <Label Content="Искать..." />
                    </StackPanel>
                </TabItem.Header>
            </TabItem>
        </local:TabControlTitled>
    </DockPanel>
</Window>
